<% title _('Webhook Targets') %>
<% title_actions(new_link(_("Create Webhook Target"))) %>

<table class="<%= table_css_classes 'table-fixed' %>">
  <thead>
    <tr>
      <th class="col-md-6"><%= sort :name, :as => s_('Webhook Targets|Name') %></th>
      <th class="col-md-5"><%= sort :target_url, :as => s_('Webhook Targets|Target Url') %></th>
      <th class="col-md-1"><%= _('Actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @webhook_targets.each do |webhook_target| %>
      <tr>
        <td class="ellipsis">
          <%= link_to_if_authorized webhook_target.name, hash_for_edit_webhook_target_path(id: webhook_target) %>
        </td>
        <td class="ellipsis">
          <%= webhook_target.target_url %>
        </td>
        <td><%= action_buttons display_delete_if_authorized hash_for_edit_webhook_target_path(id: webhook_target), :data => { :confirm => _("Delete %s?") % webhook_target.target_url } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
